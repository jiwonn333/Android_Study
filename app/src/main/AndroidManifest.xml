<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysnsaccount">
    <!--인터넷 사용 권한 설정-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--휴대폰 정보 가져오기 위한 권한 설정-->
<!--    <uses-permission android:name="android.permission.CAMERA"/>-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>

    <application
        android:name=".SNSLogin.GlobalHelper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySNSAccount"
        android:usesCleartextTraffic="true"> <!--일반 http사이트 접근 설정-->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity android:name=".SNSLogin.SecondActivity" />
        <activity android:name=".SNSLogin.KakaoLogin" />
        <activity android:name=".RetrofitExample.RetrofitActivity" />
        <activity android:name=".Permissions.PermissionActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--새로 생성한 웹 뷰 클래스 등록-->
        <activity android:name=".CustomWebView.WebViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>